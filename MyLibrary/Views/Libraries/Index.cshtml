@model IEnumerable<MyLibrary.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<h2>Libraries</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseHour)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LibraryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LibraryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LibraryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
